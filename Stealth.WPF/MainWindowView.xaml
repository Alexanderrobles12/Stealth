<Window x:Class="Stealth.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stealth.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="132,66,0,0" VerticalAlignment="Top" Width="75" 
                Command="{Binding refreshWindowList}"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="70,127,0,0" VerticalAlignment="Top" Height="129" Width="293" 
                  ItemsSource="{Binding model.windowList}"/>


    </Grid>
</Window>
